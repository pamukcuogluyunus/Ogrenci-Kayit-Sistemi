@using MvcProjeOdev.Models.EntityFramework
@model List<TblKulupler>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>

        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
            <tr>

                <td>@klp.KULUPID</td>
                <td>@klp.KULUPAD</td>
                <td><a href="/Kulup/Sil/@klp.KULUPID" class="btn btn-danger">Sil</a>
                <a href="/Kulup/KulupGetir/@klp.KULUPID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }


    </tbody>


</table>
<a href="/Kulup/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>

